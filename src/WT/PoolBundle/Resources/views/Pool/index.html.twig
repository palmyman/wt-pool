{% extends 'WTPoolBundle::layout.html.twig' %}

{% block body -%}
    <h1>{% block title %}Pool list{% endblock title %}</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Desciprion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pool_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.desciprion }}</td>
                <td>
                <ul>                    
                    <li>
                        <a href="{{ path('pool_show', { 'id': entity.id }) }}">Manage</a>
                    </li>                    
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pool_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
